<script type="text/javascript">
//some test if the jquery test works.
$(document).ready(function()
  {
    $("#paragraph").click(function()
      {
        $.ajax({
        url:"getParagraphs.json",
        type: "POST",
        data: {id:<%=params[:id]%>, limit:10},
        dataType:"json"
        }).done(function(data) {
        var htmlpart=""
        for(var i=0;i<data.length;i++) {
        htmlpart = htmlpart + "<div class='span8'>"+data[i].paragraph.body+"</div>";
        }
       $("#changed").html(htmlpart);
       $("#paragraph").prepend("<i class=\"icon-play\"></i>  ");
       $("#paragraph").parent().addClass("active");
      });
    });
  });

</script>
