<h3><%= t :users%></h3>
<div class="span8">
<table class="table table-condensed">
    <thead>
      <tr>
          <th><%= t :name %></th>
          <th><%= t :email %></th>
          <th><%= t :register_time %></th>
          <th><%= t :role %></th>
          <th colspan="2"><%=t :change%></th>                                
      </tr>
  </thead>   
  <tbody>
  <% @users.each do |user| %>
    <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
        <td>
            <%  date = user.created_at.to_date %>
            <%= date %>
        </td>
        <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
        <td>
          <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button"><%= (t :change_role) %></a>
          <%= render user %>
        </td>
        <td><%= link_to((t :remove_user), user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %></td>                                       
    </tr>
  <% end %>
  </tbody>
</table>
</div>
